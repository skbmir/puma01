<launch>

    <!-- <param name="use_sim_time" value="true"/>
 
    <param name="robot_description" textfile="$(find puma01_description)/urdf/puma01.urdf" /> -->

  <rosparam file="$(find puma01_hardware_interface)/config/puma01_hw_interface_config.yaml" command="load"/>

  <group ns="puma01">

    <node name="puma01_hw_interface_node" pkg="puma01_hardware_interface" type="puma01_hw_interface" output="screen"/> 

    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
